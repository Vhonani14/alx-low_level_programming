NAME = school
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
	CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ) m.h
		$(CC) $(OBJ) -o $(NAME)

%.o: %.c
		$(CC) $(CFLAGS) -c $< -o $@

.PHONY: clean fclean oclean re

clean:
		$(RM) *~ $(NAME)

oclean:
		$(RM) $(OBJ)

fclean: clean oclean
		$(RM) $(NAME)

re: fclean all

