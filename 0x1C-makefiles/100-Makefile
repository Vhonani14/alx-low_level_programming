CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)

all: $(NAME)

$(NAME): $(OBJ)
		$(CC) $(OBJ) -o $(NAME)

%.o: %.c
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) -f $(OBJ)

fclean: clean
		$(RM) -f $(NAME)

re: fclean all

.PHONY: all clean fclean re

